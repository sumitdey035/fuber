<h1>
  Cars

  <button class="btn btn-success pull-right" type="button">
    Available <span class="badge"> <%= @cars.available.size %></span>
  </button>

  <button class="btn btn-danger pull-right" type="button">
    ON Trip <span class="badge"> <%= @cars.not_available.size %></span>
  </button>
</h1>

<table class="table table-bordered">
  <thead>
    <th>Status</th>
    <th>Car</th>
    <th>Trips</th>
    <th>Position(lat, lng)</th>
  </thead>
  <tbody>
    <% @cars.each do |car| %>
      <tr>
        <td><%= car.decorate.status %></td>
        <td><%= car.decorate.title %></td>
        <td><%= car.rides.size %></td>
        <td><%= "#{car.lat}, #{car.lng}" %></td>
      </tr>
    <% end %>
  </tbody>
</table>